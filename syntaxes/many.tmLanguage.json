{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.many",
	"name": "RunMany",
	"patterns": [{ "include": "#comment" }, { "include": "#exit" }, { "include": "#argv-section" }],
	"repository": {
		"comment": {
			"name": "comment.inline.many",
			"match": "^%.*$\\n?"
		},
		"exit": {
			"name": "comment.exit.many",
			"begin": "^Exit\\.\\s*$",
			"while": ""
		},
		"argv-section": {
			"name": "meta.structure.argv-section.section.many",
			"patterns": [{ "include": "#argv-all-section" }, { "include": "#argv-for-section" }]
		},
		"argv-all-section": {
			"name": "meta.structure.argv-all-section.section.many",
			"begin": "^(Argv)\\s*:\\s*(.*$\\n?)",
			"beginCaptures": {
				"1": { "name": "keyword.argv-all-section.section.many" },
				"2": { "name": "string.argv-content.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [{ "include": "#comment" }, { "include": "#argv-content" }, { "include": "#argv-also" }]
		},
		"argv-for-section": {
			"name": "meta.structure.argv-for-section.section.many",
			"begin": "^Argv\\s+for\\s",
			"end": ":",
			"beginCaptures": {
				"0": { "name": "keyword.argv-for-section.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [{ "include": "#comment" }, { "include": "#argv-content" }, { "include": "#argv-also" }]
		},

		"argv-content": {
			"name": "string.argv-content.section.many",
			"match": "^(?:\\s*| {4}.*|\t.*)$\\n?"
		},
		"argv-also": {
			"name": "keyword.argv-also.section.many",
			"match": "^Also\\s*:\\s*(.*$\\n?)",
			"captures": {
				"1": { "name": "string.argv-content.section.many" }
			}
		},
		"language-list": {}
	}
}
