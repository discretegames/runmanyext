{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.many",
	"name": "RunMany",
	"patterns": [{ "include": "#comment" }, { "include": "#exit" }, { "include": "#argv-section" }],
	"repository": {
		"comment": {
			"name": "comment.inline.many",
			"match": "^%.*$\\n?"
		},
		"exit": {
			"name": "comment.exit.many",
			"begin": "^Exit\\.\\s*$",
			"while": ""
		},
		"argv-section": {
			"name": "keyword.argv-section.section.many",
			"begin": "^Argv\\s*(?:\\sfor(?=\\s|:)(?:([^,:]*),)*([^,:]*))?:\\s*(.*$\\n?)",
			"beginCaptures": {
				"1": { "name": "entity.name.type.language-list.section.many" },
				"2": { "name": "entity.name.type.language-list.section.many" },
				"3": { "name": "string.argv-content.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [{ "include": "#comment" }, { "include": "#argv-content" }, { "include": "#argv-also" }]
		},
		"argv-content": {
			"name": "string.argv-content.section.many",
			"match": "^(?:\\s*| {4}.*|\t.*)$\\n?"
		},
		"argv-also": {
			"name": "keyword.argv-also.section.many",
			"match": "^Also\\s*:\\s*(.*$\\n?)",
			"captures": {
				"1": { "name": "string.argv-content.section.many" }
			}
		}
	}
}
