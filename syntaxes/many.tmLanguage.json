{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.many",
	"name": "RunMany",
	"patterns": [{ "include": "#comment" }, { "include": "#exit" }, { "include": "#argv-section" }],
	"repository": {
		"comment": {
			"name": "comment.inline.many",
			"match": "^%.*$\\n?"
		},
		"exit": {
			"name": "comment.exit.many",
			"begin": "^Exit\\.\\s*$",
			"while": ""
		},
		"argv-section": {
			"name": "meta.structure.argv-section.section.many",
			"patterns": [
				{
					"include": "#argv-all"
				}
			]
		},
		"argv-all": {
			"name": "keyword.argv-all.section.many",
			"begin": "^Argv\\s*:\\s*(.*$\\n?)",
			"beginCaptures": {
				"1": { "name": "string.argv-content-line.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [{ "include": "#comment" }, { "include": "#argv-content-line" }, { "include": "#argv-also" }]
		},
		"argv-content-line": {
			"name": "string.argv-content-line.section.many",
			"match": "^(?:\\s*| {4}.*|\t.*)$\\n?"
		},
		"argv-also": {
			"name": "keyword.argv-also.section.many",
			"match": "^Also\\s*:\\s*(.*$\\n?)",
			"captures": {
				"1": { "name": "string.argv-content-line.section.many" }
			}
		}
	}
}
