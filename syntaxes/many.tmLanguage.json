{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.many",
	"name": "RunMany",
	"fileTypes": [".many"],
	"patterns": [
		{ "include": "#hardcoded-settings-json" },
		{ "include": "#comment" },
		{ "include": "#exit" },
		{ "include": "#argv-section-list" }
	],
	"repository": {
		"hardcoded-settings-json": {
			"name": "meta.embedded.block.json",
			"begin": "^(?: {4}|\t)\\s*(?=\\{)",
			"end": "(?<=\\})\\s*(.*)$",
			"captures": {
				"1": { "name": "invalid.illegal.expected-end-of-line.many" }
			},
			"patterns": [{ "include": "source.json" }]
		},
		"comment": {
			"name": "comment.line.percentage.many",
			"match": "^(%).*$",
			"captures": {
				"1": { "name": "punctuation.definition.comment.many" }
			}
		},
		"exit": {
			"name": "comment.block.exit.many",
			"begin": "^(Exit\\.)\\s*$",
			"while": "",
			"captures": {
				"1": { "name": "comment.block.exit.command.many" }
			}
		},
		"argv-section-list": {
			"name": "meta.list.argv.section.many",
			"begin": "^(?:(Argv)\\s*|(Argv\\s+for\\b)([^,:]*(?:,[^,:]*)*))(:)\\s*(.*)$",
			"beginCaptures": {
				"0": { "name": "meta.header.lead.argv.section.many" },
				"1": { "name": "keyword.control.all.argv.section.many" },
				"2": { "name": "keyword.control.for.argv.section.many" },
				"3": { "name": "constant.language.language-list.argv.section.many" },
				"4": { "name": "punctuation.definition.header-end.section.many" },
				"5": { "name": "string.unquoted.content.argv.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [
				{ "include": "#comment" },
				{ "include": "#argv-content-line" },
				{ "include": "#argv-also-section-header" }
			]
		},
		"argv-content-line": {
			"name": "string.unquoted.content.argv.section.many",
			"match": "^(?:\\s*| {4}.*|\t.*)$"
		},
		"argv-also-section-header": {
			"name": "meta.header.also.argv.section.many",
			"match": "^(Also)\\s*(:)\\s*(.*)$",
			"captures": {
				"1": { "name": "keyword.control.also.argv.section.many" },
				"2": { "name": "punctuation.definition.header-end.section.many" },
				"3": { "name": "string.unquoted.content.argv.section.many" }
			}
		}
	}
}
