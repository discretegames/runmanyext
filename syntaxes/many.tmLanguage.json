{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.many",
	"name": "RunMany",
	"fileTypes": [".many"],
	"patterns": [
		{ "include": "#json" },
		{ "include": "#comment" },
		{ "include": "#exit" },
		{ "include": "#argv-section" },
		{ "include": "#test" }
	],
	"repository": {
		"json": {
			"name": "meta.embedded.block.json",
			"begin": "^(?=\\{)",
			"end": "$",
			"patterns": [{ "include": "source.json" }]
		},
		"comment": {
			"name": "comment.inline.many",
			"match": "^%.*$\\n?"
		},
		"exit": {
			"name": "comment.exit.many",
			"begin": "^Exit\\.\\s*$",
			"while": ""
		},
		"argv-section": {
			"name": "meta.argv-section.section.many",
			"begin": "^(?:(Argv)\\s*|(Argv\\s+for(?=\\s|:|,)((?:[^,:]*,)*[^,:]*))):\\s*(.*$\\n?)",
			"beginCaptures": {
				"1": { "name": "keyword.control.flow.argv-section.section.many" },
				"2": { "name": "keyword.control.flow.argv-section.section.many" },
				"3": { "name": "constant.language.argv-section.section.many" },
				"4": { "name": "string.argv-content.section.many" }
			},
			"while": "^(?=%|\\s*$| {4}|\t|Also\\s*:)",
			"patterns": [{ "include": "#comment" }, { "include": "#argv-content" }, { "include": "#argv-also" }]
		},
		"argv-content": {
			"name": "string.argv-content.section.many",
			"match": "^(?:\\s*| {4}.*|\t.*)$\\n?"
		},
		"argv-also": {
			"name": "meta.argv-also.section.many",
			"match": "^(Also)\\s*:\\s*(.*$\\n?)",
			"captures": {
				"1": { "name": "keyword.control.flow.argv-also.section.many" },
				"2": { "name": "string.argv-content.section.many" }
			}
		}
	}
}
