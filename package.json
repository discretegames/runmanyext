{
	"name": "runmany",
	"displayName": "RunMany",
	"description": "Syntax highlighting for RunMany, a tool that can run multiple programming languages from one file.",
	"version": "2.1.0",
	"author": {
		"name": "discretegames",
		"url": "https://github.com/discretegames",
		"email": "discretizedgames@gmail.com"
	},
	"homepage": "https://marketplace.visualstudio.com/items?itemName=discretegames.runmany",
	"publisher": "discretegames",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/discretegames/runmanyext"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#dadada"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages",
		"Education"
	],
	"keywords": [
		"many languages",
		"one file",
		"translation",
		"chrestomathy",
		"polyglot"
	],
	"dependencies": {
		"vscode-debugadapter": "^1.49.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.34.0",
		"typescript": "^4.2.2"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.runmany.run"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"languages": [
			{
				"id": "many",
				"aliases": [
					"RunMany",
					"many"
				],
				"extensions": [
					".many",
					".runmany"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "many",
				"scopeName": "source.many",
				"path": "./syntaxes/many.tmLanguage.json",
				"embeddedLanguages": {}
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"command": "extension.runmany.run",
					"when": "resourceLangId == many"
				}
			],
			"commandPalette": [
				{
					"command": "extension.runmany.run",
					"when": "resourceLangId == many"
				}
			]
		},
		"commands": [
			{
				"command": "extension.runmany.run",
				"title": "Run File",
				"category": "RunMany",
				"icon": "$(debug-start)"
			}
		],
		"debuggers": [
			{
				"type": "runmany",
				"label": "RunMany",
				"languages": [
					"many"
				],
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "The path to the RunMany file to run.",
								"default": "${file}"
							},
							"settingsFile": {
								"type": "string",
								"description": "The optional path to the settings JSON file to use. Leave empty for none.",
								"default": ""
							},
							"outputFile": {
								"type": "string",
								"description": "The optional path to the file to redirect output to. Leave empty for none.",
								"default": ""
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "RunMany: Current File",
						"type": "runmany",
						"request": "launch",
						"program": "${file}"
					}
				],
				"configurationSnippets": [
					{
						"label": "RunMany: Run File",
						"description": "Run a .many file with RunMany.",
						"body": {
							"name": "RunMany: Custom File",
							"type": "runmany",
							"request": "launch",
							"program": "myfile.many",
							"settingsFile": "",
							"outputFile": ""
						}
					}
				]
			}
		]
	}
}
